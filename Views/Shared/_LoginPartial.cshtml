@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager

<ul class="navbar-nav sm-auto">
    <!-- Right Section: Login or User Profile -->
    <li class="nav-item d-flex align-items-center">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="user-profile-circle">
                @* Extract the initials from the user name *@
                @{
                    var userName = User.Identity.Name.Split(' ');
                    var initials = userName.Length >= 2 ? userName[0].Substring(0, 1) + userName[1].Substring(0, 1) : userName[0].Substring(0, 1);
                }
                <span class="user-initials">
                    @initials
                </span>
            </div>
            <a class="nav-link active" asp-controller="Account" asp-action="Logout">Logout</a>
        }
        else
        {
            <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        }
    </li>
</ul>





