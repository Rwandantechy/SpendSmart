 @model ErrorViewModel
@{
    ViewData["Title"] = "Error - Income Tracker";
}

<div class="error-container">
    <div class="error-icon">💸</div>
    <h1 class="error-title">Oops! Our Calculations Hit a Snag</h1>
    <p class="error-message">We encountered an error while processing your financial request. Don't worry, your data is safe!</p>

    @if (Model.ShowRequestId)
    {
        <div class="error-details">
            <strong>Transaction ID:</strong> <code>@Model.RequestId</code>
        </div>
    }

    <div class="error-actions">
        <a href="/dashboard" class="btn btn-primary">Return to Dashboard</a>
        <a href="/support" class="btn btn-secondary">Contact Support</a>
    </div>

    <div class="financial-tip">
        <h3>While We Fix This...</h3>
        <p>Did you know? Regularly tracking your income can lead to better financial decisions and help you reach your savings goals faster.</p>
    </div>

    <div class="developer-info">
        <h3>Technical Details</h3>
        <p>
            For detailed error information, our development team can switch to the <strong>Development</strong> environment.
        </p>
        <p class="warning">
            <strong>Note:</strong> The Development mode is for internal use only and is not enabled on the live site to protect your financial data.
        </p>
    </div>
</div>

<style>
    .error-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .error-icon {
        font-size: 48px;
        margin-bottom: 20px;
    }

    .error-title {
        color: #28a745;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .error-message {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 20px;
    }

    .error-details {
        background-color: #e9ecef;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .error-actions {
        margin-bottom: 30px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #28a745;
        color: white;
    }

    .btn-secondary {
        background-color: #17a2b8;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .financial-tip {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 20px;
        text-align: left;
    }

    .financial-tip h3 {
        color: #155724;
        margin-bottom: 10px;
    }

    .developer-info {
        border-top: 1px solid #dee2e6;
        padding-top: 20px;
        text-align: left;
    }

    .developer-info h3 {
        color: #495057;
        margin-bottom: 10px;
    }

    .warning {
        color: #856404;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 4px;
        padding: 10px;
        margin-top: 15px;
    }
</style>